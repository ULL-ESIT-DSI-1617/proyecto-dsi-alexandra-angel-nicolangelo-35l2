<!-- onLoad es un evento que se ejecuta cuando se ha cargado la etiqueta -->
<body onLoad="checkIfUserIsLoged()">
  <div class="container">
    <h1>Conversor de Temperaturaaa</h1>
    <div class="seccion_central">
    <div>
      <!--<span id="username" name="username"></span>-->
      <p>Bienvenido, <span id="nombre" name="nombre"></span></p>
      
      
      <script>
      var param = getQueryVariable("username");
        function getQueryVariable(variable) {
          var query = window.location.search.substring(1);
          var vars = query.split("&");
          for (var i=0;i<vars.length;i++) {
            var pair = vars[i].split("=");
            if (pair[0] == variable) {
              return pair[1];
            }
          } 
        }
      document.getElementById("nombre").innerHTML = param;
      </script>
      <!--Si cerramos sesión se expira la cookie-->
       <button><a id="logoutButton" onClick="doLogout()">Cerrar sesión</a></button>
    </div>
