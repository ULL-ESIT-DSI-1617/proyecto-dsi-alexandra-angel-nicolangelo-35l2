        <span id="converted" name="converted"></span>
    </form>
    
   <h1>Temperatura convertidas</h1>
    <ul>
      <% for (temperatura in temperaturas) { %>
        <li><p><%=temperaturas[temperatura].inicial%> || <%=temperaturas[temperatura].final%> || <%=temperaturas[temperatura].name%> -> <a href="delete/<%=temperaturas[temperatura].id%>">Delete</a></p></li>
      <% } %>
    </ul>
  
    
    </div>
 </div>
